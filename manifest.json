{
    "name": "myTestPlug",
    "description": "我的第一个chrome插件",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": 
    [
        {
            "matches":["https://*/*"],
            "js":["jquery.min.js", "demo_jquery.js"],
            "run_at": "document_end"
        }
    ]
  }